<div class="crop-search-results row wide-row">
  <div class="crop-results-container small-6 columns">
    <h2 class="text-center">Choose a crop</h2>
    <% if @crops.empty? %>
    <p class="no-results, text-center">Sorry, we don't have any crops matching "<%= params[:q].to_s %>."<br/>Would you like to <%= link_to "add this crop", new_crop_path %>?</p>
    <% end %>
    <%= render partial: 'crop_results', object: @crops %>
  </div>
  <div class="guide-results-container small-6 columns">
    <h2 class="text-center">Explore the guides</h2>
    <% if @guides.empty? %>
      <p class="no-results, text-center">Looks like there aren't any guides for these crops yet.<br/>Perhaps you could <%= link_to "create one", new_guide_path %>?</p>
    <% end %>
    <%= render partial: 'guides/guide_results_list', object: @guides %>
  </div>
</div>
