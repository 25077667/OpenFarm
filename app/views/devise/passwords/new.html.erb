<div class="row">
    

  <div class="columns small-5 centered">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert-box alert radius columns small-6 centered" data-alert="">
          <% resource.errors.full_messages.each do |full_message| %>
            <%= full_message %>
          <% end %>
          <a class="close" href="#">Ã—</a>
        </div>
      <% end %>


      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %>

      <%= f.submit "Send me reset password instructions", class:'small button'%>
      <br/>
      <br/>
      
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
