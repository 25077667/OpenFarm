<div class="member-profile">
  <div class="row wide-row canopy"
       style="background-image: url(/assets/baren_field.jpg)">
    <div class="canopy" style="background-color: rgba(0,0,0,0.15)">
      <div class="small-12 medium-8 large-6 small-centered columns member-info-wrapper">
        <div class="row">
          <div class="small-4 columns">
            <div class="member-picture"
              style="background-image: url(/assets/baren_field.jpg)">
            </div>
          </div>
          <div class="small-8 columns member-infos">
            <h2><%= @user.display_name %></h2>
            <h5><%= @user.location %></h5>
            <h5>Favorite Crop: Blueberries</h5>
            <h5>Growing Practices: Organic</h5>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row wide-row">
    <!-- Sub header for badges and followers on mobile -->
    <div class="small-12 show-for-small-only columns profile-sub-header">
      <ul>
        <li>
          <h4 class="number">4</h4>
          <p class="attribute">badges</p>
        </li>
        <li>
          <h4 class="number">22</h4>
          <p class="attribute">followers</p>
        </li>
        <li>
          <h4 class="number">68</h4>
          <p class="attribute">following</p>
        </li>
      </ul>
    </div>
    </br>
    </br>

    <!-- Sidebar for badges and followers on larger screens -->
    <div class="medium-4 large-3 show-for-medium-up columns profile-sidebar">
      <!-- Member Badges -->
      <div class="row">
        <div class="small-12 columns profile-sidebar-section">
          <h4 class="section-header">Badges</h4>
          <ul class="badges-list">
            <li>Backer Badge</li>
            <li>Guide Creator Level 3</li>
            <li>25 Comments</li>
            <li>Crop Editor Level 10</li>
          </ul>
        </div>
      </div>
      </br>
      </br>

      <!-- Followers -->
      <div class="row">
        <div class="small-12 columns profile-sidebar-section">
          <h4 class="section-header">Followers</h4>
          <ul class="badges-list">
            <li>Barack Obama</li>
            <li>Hilary Clinton</li>
            <li>Kat Ying</li>
            <li>+ 4 more</li>
          </ul>
        </div>
      </div>
      </br>
      </br>

      <!-- Following -->
      <div class="row">
        <div class="small-12 columns profile-sidebar-section">
          <h4 class="section-header">Following</h4>
          <ul class="badges-list">
            <li>Barack Obama</li>
            <li>Hilary Clinton</li>
            <li>Kat Ying</li>
            <li>+ 4 more</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="small-12 medium-8 large-9 columns">
      <!-- Member's Guides -->
      <div class="small-12 columns profile-section">
        <div class="section-header">
          <h3 class="section-title"><%= t('member.guides') %></h3>
          <!-- TODO: Only show create button if user is current_user -->
          <button class="button right small">Create Guide</button>
          <hr>
        </div>
        <div class="guides row guides-list">
          <div class="small-12 columns">
            <table>
              <% @user.guides.each do |guide| %>
                <tr>
                  <td class="guide-name">
                    <%= link_to(guide.name, {:action => 'show', :id => guide.id}, :class=>'action show guide-name') %>
                  </td>
                  <td class="crop-name">
                    <%= link_to(guide.crop.name, { controller: 'crops',
                      action: 'show',
                      id: guide.crop.id }, class: 'action show') %>
                  </td>

                  <!-- TODO: Only show guide controls if user is current_user -->
                  <td class="guide-controls">
                    <%= link_to(icon('edit'), {:action => 'edit', :id => guide.id}, :class=>'action show') %>
                    <%= link_to(icon('trash'), guide_path(guide), :method => 'delete', :class=>'action show', data: {confirm: "Are you sure?"}) %>
                  </td>
                </tr>
              <% end %>
            </table>
            <% if @user.guides.count == 0 %>
              <div class="loading-content">
                <%= t('.no_guides_yet') %>
              </div>
            <% end %>

            <!-- TODO: Only show create button if user is current_user -->
            <%= link_to t('.create_a_guide'), { controller: 'guides', action: 'new' },
            class:"button new-guide-button" %>
          </div>
        </div>
      </div>
      </br>
      </br>

      <!-- Member's Gardens -->
      <div class="small-12 columns profile-section">
        <div class="section-header">
          <h3 class="section-title">Gardens</h3>
          <!-- TODO: Only show button if user is current_user -->
          <button class="button right small">Manage Gardens</button>
          <button class="button right small">Add Garden</button>
          <hr>
        </div>
      </div>
      </br>
      </br>

      <!-- Member's Organizations -->
      <div class="small-12 columns profile-section">
        <div class="section-header">
          <h3 class="section-title"><%= t('users.organizations') %></h3>
          <!-- TODO: Only show button if user is current_user -->
          <button class="button right small">Explore Organizations</button>
          <hr>
        </div>
      </div>
      </br>
      </br>

      <!-- Account Information -->
      <!-- TODO: Only show if user is current_user -->
      <div class="small-12 columns profile-section">
        <div class="section-header">
          <h3 class="section-title"><%= t('users.account_information') %></h3>
          <button class="button right small">Edit</button>
          <hr>
        </div>
      </div>
      </br>
      </br>

      <!-- Delete Account -->
      <!-- TODO: Only show if user is current_user -->
      <div class="small-12 columns profile-section">
        <div class="section-header">
          <h3 class="section-title"><%= t('users.delete_account') %></h3>
          <hr>
        </div>
      </div>
  </div>
</div>
