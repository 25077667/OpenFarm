<%= form_for @user do |f| %>
	
	<%= f.label :display_name, "Display Name" %>
	<%= f.text_field :display_name %>

	<%= f.label :password, "Password" %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirm Password" %>
	<%= f.password_field :password_confirmation %>

	<%= f.label :email_address, "Email Address" %>
	<%= f.email_field :email_address %>

	<%= f.label :location, "Location" %>
	<%= f.text_field :location %>

	<%= f.label :soil_type, "Soil Type" %>
	<%= f.text_field :soil_type %>

	<%= f.label :years_experience, "Years experience" %>
	<%= f.text_field :years_experience %>

	<%= f.label :preferred_growing_style, "Preferred Growing Style" %>
	<%= f.text_field :preferred_growing_style %>

	<%= f.submit %>

<% end %>