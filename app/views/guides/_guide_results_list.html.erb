<ul class="guide-results">
  <% @guides.sort { |guide| if guide.compatibility_score(current_user) then -guide.compatibility_score(current_user) else 0 end }.each do |guide| %>
    <%= render partial: "/guides/guide_result", locals: {guide: guide} %>
  <% end %>
  <% if @guides.count >= 10 %>
    <%= link_to "Create a guide!", { controller: 'guides', action: 'new', crop_id: @crop ? @crop.id : '' },
    class:"button new-guide-button" %>
  <% end %>
</ul>
